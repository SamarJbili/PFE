<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="odoo_owl_kanban.KanbanView" t-inherit="web.KanbanView" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o-kanban-button-new')]" position="before">
           <t t-if="props.resModel === 'hr.applicant'">
                <button type="button" class="btn btn-primary o-kanban-button-test" accesskey="c" t-on-click="redirectToDashboard">
                    Tableau de bord
                </button>
                <button type="button" class="btn btn-primary o-kanban-button-test" accesskey="c" t-on-click="runAIAnalysis" data-bounce-button="">
                    Analyse
                </button>
                <div class="o-kanban-score-field">
                    <label for="score" class="o-kanban-score-label">Score:</label>
                    <input type="number" id="score" class="o-kanban-score-input" placeholder="Entrez un score"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
