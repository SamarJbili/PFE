<odoo>
  <!-- Template pour modifier une candidature -->
  <template id="edit_application_form" name="Modifier Candidature">
    <t t-call="website.layout">
      <!-- Conteneur principal -->
      <div class="container mt-4">
        <!-- Titre de la page -->
        <h2>Modifier ma candidature</h2>

        <!-- Formulaire de modification -->
        <form method="post" enctype="multipart/form-data" class="mt-3">
          <!-- Champ CSRF pour sécuriser le formulaire -->
          <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

          <!-- Champ Nom -->
          <div class="form-group">
            <label for="partner_name">Nom</label>
            <input
              type="text"
              name="partner_name"
              id="partner_name"
              class="form-control"
              t-att-value="application.partner_name or ''"
              required="required"
            />
          </div>

          <!-- Champ Email -->
          <div class="form-group">
            <label for="email_from">Email</label>
            <input
              type="email"
              name="email_from"
              id="email_from"
              class="form-control"
              t-att-value="application.email_from or ''"
              required="required"
            />
          </div>

          <!-- Champ Téléphone -->
          <div class="form-group">
            <label for="partner_phone">Téléphone</label>
            <input
              type="text"
              name="partner_phone"
              id="partner_phone"
              class="form-control"
              t-att-value="application.partner_phone or ''"
            />
          </div>

          <!-- Section CV Actuel -->
          <div class="form-group">
            <label>CV Actuel</label>
            <t t-if="application.cv_file">
              <a
                t-att-href="'/web/content/hr.applicant/' + str(application.id) + '/cv_file/' + application.cv_filename"
                target="_blank"
                class="btn btn-sm btn-secondary"
              >
                Télécharger le CV actuel
              </a>
            </t>
            <t t-else="">
              <p>Aucun CV actuellement téléchargé.</p>
            </t>
          </div>

          <!-- Champ Nouveau CV -->
          <div class="form-group">
            <label for="cv_file">Changer le CV</label>
            <input
              type="file"
              name="cv_file"
              id="cv_file"
              class="form-control"
              accept=".pdf,.doc,.docx"
            />
          </div>

          <!-- Bouton Enregistrer -->
          <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
          </div>
        </form>
      </div>
    </t>
  </template>
</odoo>