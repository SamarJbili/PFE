<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="odoo_owl_kanban.KanbanView" t-inherit="web.KanbanView" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o-kanban-button-new')]" position="before">
           <t t-if="props.resModel === 'hr.applicant'">

                <button type="button" class="btn btn-primary o-kanban-button-test" accesskey="c" t-on-click="runAIAnalysis" data-bounce-button="">
                    Analyse et Scoring
                </button>
                <div class="o-kanban-score-field">
                    <label for="rang" class="o-kanban-rang-label">Rang:</label>
                    <input type="number" id="Rang" class="o-kanban-rang-input" placeholder="Entrez un Rang"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>